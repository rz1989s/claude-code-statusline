{
  "name": "claude-code-statusline",
  "displayName": "Claude Code Statusline",
  "description": "Display Claude Code metrics in VS Code status bar and sidebar",
  "version": "0.1.0",
  "publisher": "rz1989s",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rz1989s/claude-code-statusline"
  },
  "bugs": {
    "url": "https://github.com/rz1989s/claude-code-statusline/issues"
  },
  "homepage": "https://github.com/rz1989s/claude-code-statusline#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "claude",
    "statusline",
    "ai",
    "mcp",
    "anthropic"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-statusline.show",
        "title": "Claude Statusline: Show Details",
        "icon": "$(robot)"
      },
      {
        "command": "claude-statusline.refresh",
        "title": "Claude Statusline: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-statusline.toggleStatusBar",
        "title": "Claude Statusline: Toggle Status Bar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-statusline",
          "title": "Claude Code",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "claude-statusline": [
        {
          "id": "claudeStatuslineRepository",
          "name": "Repository"
        },
        {
          "id": "claudeStatuslineCost",
          "name": "Cost"
        },
        {
          "id": "claudeStatuslineMcp",
          "name": "MCP Servers"
        },
        {
          "id": "claudeStatuslineSystem",
          "name": "System"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claude-statusline.refresh",
          "when": "view =~ /^claudeStatusline/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code Statusline",
      "properties": {
        "claudeStatusline.refreshInterval": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "Refresh interval in milliseconds (1000-60000)"
        },
        "claudeStatusline.statuslinePath": {
          "type": "string",
          "default": "~/.claude/statusline/statusline.sh",
          "description": "Path to statusline.sh script"
        },
        "claudeStatusline.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar item"
        },
        "claudeStatusline.showCost": {
          "type": "boolean",
          "default": true,
          "description": "Show session cost in status bar"
        },
        "claudeStatusline.showMcp": {
          "type": "boolean",
          "default": true,
          "description": "Show MCP server count in status bar"
        },
        "claudeStatusline.showRepo": {
          "type": "boolean",
          "default": true,
          "description": "Show repository info in status bar"
        },
        "claudeStatusline.statusBarPosition": {
          "type": "string",
          "default": "right",
          "enum": ["left", "right"],
          "description": "Status bar item position"
        },
        "claudeStatusline.statusBarPriority": {
          "type": "number",
          "default": 100,
          "description": "Status bar item priority (higher = more to the left)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "npx @vscode/vsce package",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
